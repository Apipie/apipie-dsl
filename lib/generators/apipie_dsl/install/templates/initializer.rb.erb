ApipieDSL.configure do |config|
  config.app_name                = '<%= Rails.application.class.name[/^\w+/] %>'
  config.dsl_base_url            = '<%= options.dsl_path %>'
  config.doc_base_url            = '<%= options.route %>'
  # where is your DSL defined?
  config.dsl_classes_matchers = [
    "#{Rails.root}/lib/dsl/**/*.rb"
  ]
  config.sections = %i[all]
end
